# GoldenSignalsAI Environment Configuration Example
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# === APPLICATION SETTINGS ===
APP_NAME="GoldenSignalsAI"
VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true
SECRET_KEY="generate-a-secure-random-key-minimum-32-chars"

# === DATABASE SETTINGS ===
DATABASE_URL="postgresql://username:password@localhost:5432/dbname"
DATABASE_HOST="localhost"
DATABASE_PORT=5432
DATABASE_NAME="goldensignalsai"
DATABASE_USER="your_db_user"
DATABASE_PASSWORD="your_secure_password"

# === REDIS SETTINGS ===
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# === API KEYS ===
# Get your own API keys from the respective providers

# Primary Data Providers
TWELVEDATA_API_KEY=""  # Get free key at https://twelvedata.com/
FINNHUB_API_KEY=""     # Get free key at https://finnhub.io/

# AI Providers
OPENAI_API_KEY=""      # Get from https://platform.openai.com/
ANTHROPIC_API_KEY=""   # Get from https://console.anthropic.com/
XAI_API_KEY=""         # Get from https://x.ai/

# Backup Data Providers
ALPHA_VANTAGE_API_KEY=""  # Get free key at https://www.alphavantage.co/
POLYGON_API_KEY=""        # Get from https://polygon.io/
FMP_API_KEY=""           # Get from https://financialmodelingprep.com/

# === SECURITY SETTINGS ===
JWT_SECRET_KEY="generate-a-secure-random-jwt-key"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS Settings
CORS_ORIGINS="http://localhost:3000,http://localhost:5173,http://localhost:8080"

# === MONITORING ===
SENTRY_DSN=""  # Optional: Get from https://sentry.io/

# === LANGSMITH (Optional) ===
LANGCHAIN_API_KEY=""
LANGCHAIN_TRACING_V2="false"
LANGCHAIN_PROJECT=""

# === MCP SETTINGS ===
MCP_GATEWAY_URL="http://localhost:8001"
MCP_API_KEY="generate-secure-mcp-key"
