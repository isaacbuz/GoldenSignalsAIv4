# GoldenSignalsAI Environment Configuration
# Copy this file to .env and fill in your actual values

# === APPLICATION SETTINGS ===
APP_NAME="GoldenSignalsAI"
VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true
SECRET_KEY="your-secret-key-here-minimum-32-chars"

# === DATABASE SETTINGS ===
DATABASE_URL="postgresql://user:password@localhost:5432/goldensignals"
DATABASE_HOST="localhost"
DATABASE_PORT=5432
DATABASE_NAME="goldensignals"
DATABASE_USER="postgres"
DATABASE_PASSWORD="password"

# === REDIS SETTINGS ===
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# === API KEYS ===
# OpenAI API Key (for AI features)
OPENAI_API_KEY="sk-your-openai-key-here"

# Anthropic API Key (for Claude AI)
ANTHROPIC_API_KEY="sk-your-anthropic-key-here"

# Alpha Vantage API Key (for financial data)
ALPHA_VANTAGE_API_KEY="your-alpha-vantage-key"

# Polygon.io API Key (for market data)
POLYGON_API_KEY="your-polygon-key"

# Financial Modeling Prep API Key
FMP_API_KEY="your-fmp-key"

# === SECURITY SETTINGS ===
JWT_SECRET_KEY="your-jwt-secret-key-here"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS Settings
CORS_ORIGINS="http://localhost:3000,http://localhost:5173,http://localhost:8080"

# === MONITORING & LOGGING ===
LOG_LEVEL="INFO"
LOG_FILE="logs/app.log"

# Sentry DSN (for error tracking)
SENTRY_DSN="your-sentry-dsn-here"

# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# === WEBSOCKET SETTINGS ===
WS_HOST="localhost"
WS_PORT=8001
WS_MAX_CONNECTIONS=1000

# === AI AGENT SETTINGS ===
MAX_AGENTS=30
AGENT_TIMEOUT=30
CONSENSUS_THRESHOLD=0.6
SIGNAL_GENERATION_INTERVAL=30

# === RATE LIMITING ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# === CACHING ===
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# === DEVELOPMENT SETTINGS ===
HOT_RELOAD=true
API_DOCS_ENABLED=true
DEBUG_SQL=false

# === PRODUCTION SETTINGS ===
# Only used when ENVIRONMENT=production
WORKER_COUNT=4
KEEP_ALIVE_TIMEOUT=5
MAX_WORKER_CONNECTIONS=1000

# === EXTERNAL SERVICES ===
# Yahoo Finance (free - no key needed)
YAHOO_FINANCE_ENABLED=true

# IEX Cloud
IEX_CLOUD_API_KEY="your-iex-cloud-key"
IEX_CLOUD_BASE_URL="https://cloud.iexapis.com/stable"

# === NOTIFICATION SETTINGS ===
EMAIL_ENABLED=false
EMAIL_SMTP_SERVER="smtp.gmail.com"
EMAIL_SMTP_PORT=587
EMAIL_USERNAME="your-email@gmail.com"
EMAIL_PASSWORD="your-email-password"

# Slack notifications
SLACK_ENABLED=false
SLACK_WEBHOOK_URL="your-slack-webhook-url"

# === BACKUP SETTINGS ===
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# === TESTING SETTINGS ===
TEST_DATABASE_URL="sqlite:///test.db"
TEST_MODE=false

# === FEATURE FLAGS ===
FEATURE_AI_SIGNALS=true
FEATURE_LIVE_DATA=true
FEATURE_BACKTESTING=true
FEATURE_PORTFOLIO_TRACKING=true
FEATURE_RISK_MANAGEMENT=true
FEATURE_SOCIAL_TRADING=false

# === PERFORMANCE SETTINGS ===
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
CONNECTION_POOL_SIZE=20
DATABASE_POOL_SIZE=10

# === DEPLOYMENT SETTINGS ===
CONTAINER_PORT=8000
HEALTH_CHECK_ENDPOINT="/health"
READINESS_CHECK_ENDPOINT="/ready"
METRICS_ENDPOINT="/metrics"
