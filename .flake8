[flake8]
max-line-length = 100
extend-ignore = E203, W503, E501
exclude =
    .git,
    __pycache__,
    docs/source/conf.py,
    old,
    build,
    dist,
    .eggs,
    *.egg,
    venv,
    .venv,
    migrations,
    .tox,
    .mypy_cache,
    .pytest_cache,
    .hypothesis,
    htmlcov,
    node_modules
max-complexity = 10
per-file-ignores =
    __init__.py:F401
